FROM node:18-alpine

# Install bash for development tools compatibility (Cursor IDE)
RUN apk add --no-cache bash curl

WORKDIR /app

COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Ensure nodemon is available globally for development
RUN npm install -g nodemon

COPY . .

EXPOSE 5000

# Development command with nodemon for hot reload
CMD ["npm", "run", "dev"]